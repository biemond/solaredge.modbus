{
  "name": {
    "en": "Solaredge Inverter",
    "de": "Solaredge Wechselrichter"
  },
  "class": "solarpanel",
  "energy": {
    "batteries": ["OTHER"]
  },
  "capabilities": [
    "measure_power",
    "measure_current",
    "measure_temperature.invertor",
    "invertorstatus",
    "meter_power",
    "meter_power.daily",
    "activepowerlimit",
    "powerreduce"
  ],
  "capabilitiesOptions": {
    "measure_power": {
      "decimals": 0,
      "title": {
        "en": "Solar Power",
        "de": "Solarleistung"
      }
    },
    "measure_current.phase1": {
      "title": {
        "en": "AC Current phase1",
        "de": "AC-Strom Phase 1"
      }
    },
    "measure_current.phase2": {
      "title": {
        "en": "AC Current phase2",
        "de": "AC-Strom Phase 2"
      }
    },
    "measure_current.phase3": {
      "title": {
        "en": "AC Current phase3",
        "de": "AC-Strom Phase 3"
      }
    },
    "measure_current": {
      "title": {
        "en": "AC Current",
        "de": "AC-Strom"
      }
    },
    "measure_voltage.phase1": {
      "title": {
        "en": "Voltage phase1",
        "de": "Spannung Phase 1"
      }
    },
    "measure_voltage.phase2": {
      "title": {
        "en": "Voltage phase2",
        "de": "Spannung Phase 2"
      }
    },
    "measure_voltage.phase3": {
      "title": {
        "en": "Voltage phase3",
        "de": "Spannung Phase 3"
      }
    },
    "measure_voltage.phase1n": {
      "title": {
        "en": "Voltage phase1n",
        "de": "Spannung Phase 1n"
      }
    },
    "measure_voltage.phase2n": {
      "title": {
        "en": "Voltage phase2n",
        "de": "Spannung Phase 2n"
      }
    },
    "measure_voltage.phase3n": {
      "title": {
        "en": "Voltage phase3n",
        "de": "Spannung Phase 3n"
      }
    },
    "measure_temperature.invertor": {
      "title": {
        "en": "Heatsink temperature",
        "nl": "Heatsink temperatuur",
        "de": "Kühlkörpertemperatur"
      },
      "decimals": 2
    },
    "meter_power": {
      "title": {
        "en": "Total Yield",
        "nl": "Totale opbrengst",
        "de": "Gesamtertrag"
      },
      "decimals": 2
    },
    "meter_power.daily": {
      "title": {
        "en": "Total Day Yield",
        "nl": "Totale dag opbrengst",
        "de": "Tagesgesamtertrag"
      },
      "decimals": 2,
      "icon": "/assets/total_yield.svg"
    }
  },
  "platforms": ["local"],
  "connectivity": ["lan"],
  "images": {
    "small": "{{driverAssetsPath}}/images/small.jpg",
    "large": "{{driverAssetsPath}}/images/large.jpg"
  },
  "pair": [
    {
      "id": "start"
    }
  ],
  "settings": [
    {
      "type": "group",
      "label": {
        "en": "Inverter settings",
        "de": "Wechselrichtereinstellungen"
      },
      "children": [
        {
          "id": "address",
          "type": "text",
          "value": "0.0.0.0",
          "label": {
            "en": "IP Address",
            "de": "IP-Adresse"
          }
        },
        {
          "id": "port",
          "type": "number",
          "value": 1502,
          "step": 1,
          "label": {
            "en": "Port",
            "de": "Port"
          }
        },
        {
          "id": "maxpeakpower",
          "type": "number",
          "value": 0,
          "step": 1,
          "label": {
            "en": "Max peak power in W"
          }
        },
        {
          "id": "id",
          "type": "number",
          "value": 1,
          "step": 1,
          "attr": {
            "min": 0,
            "max": 50
          },
          "label": {
            "en": "Inverter ID",
            "nl": "Inverter ID",
            "de": "Wechselrichter-ID"
          }
        },
        {
          "id": "pollinginterval",
          "type": "number",
          "value": 28,
          "min": 5,
          "units": { "en": "seconds" },
          "label": {
            "en": "Polling interval"
          }
        }
      ]
    }
  ]
}
